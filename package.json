{
    "private": true,
    "license": "MIT",
    "name": "template_serverless_aws",
    "version": "0.0.0",
    "description": "A boilerplate project for AWS serverless projects",
    "author": "Marcelo Pereira <marcgp@gmail.com>",
    "repository": "https://github.com/marcgp/template_serverless_aws.git",
    "bugs": "https://github.com/marcgp/template_serverless_aws/issues",
    "homepage": "https://github.com/marcgp/template_serverless_aws#readme",
    "scripts": {
        "dev": "nodemon --watch source --ext js,jsx,ts,tsx --exec ts-node source/webapps/todos_webapp/server.local.ts ",
        "lint": "eslint . --ext .ts",
        "build": "npm run build:clean && npm run build:bundles",
        "build:clean": "rm -rf ./build",
        "build:bundles": "npm run build:bundle:lambdas && npm run build:bundle:webapps",
        "build:bundle:lambdas": "webpack --config ./webpack.bundle.lambdas.js",
        "build:bundle:webapps": "webpack --config ./webpack.bundle.webapps.js",
        "deploy": "npm run deploy:stacks:test",
        "deploy:stacks:test": "cdk deploy --app \"ts-node infrastructure\" --require-approval never"
    },
    "dependencies": {
        "aws-serverless-express": "3.3.6",
        "express": "4.17.1",
        "log4js": "6.1.2",
        "react": "16.12.0",
        "react-dom": "16.12.0"
    },
    "devDependencies": {
        "@aws-cdk/aws-apigateway": "1.25.0",
        "@aws-cdk/aws-lambda": "1.25.0",
        "@aws-cdk/core": "1.25.0",
        "@babel/core": "7.8.4",
        "@babel/plugin-proposal-class-properties": "7.8.3",
        "@babel/plugin-proposal-object-rest-spread": "7.8.3",
        "@babel/preset-react": "7.8.3",
        "@babel/preset-typescript": "7.8.3",
        "@types/aws-serverless-express": "3.3.3",
        "@types/express": "4.17.2",
        "@types/fs-extra": "8.1.0",
        "@types/node": "13.7.4",
        "@types/react": "16.9.22",
        "@types/react-dom": "16.9.5",
        "@types/webpack-node-externals": "1.7.1",
        "@typescript-eslint/parser": "2.20.0",
        "aws-cdk": "1.25.0",
        "babel-loader": "8.0.6",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.10.0",
        "eslint-plugin-mocha": "6.3.0",
        "eslint-plugin-prettier": "3.1.2",
        "fs-extra": "8.1.0",
        "html-webpack-plugin": "3.2.0",
        "nodemon": "2.0.2",
        "prettier": "1.19.1",
        "ts-node": "8.6.2",
        "typescript": "3.7.5",
        "webpack": "4.41.6",
        "webpack-cli": "3.3.11",
        "webpack-node-externals": "1.7.2"
    }
}
